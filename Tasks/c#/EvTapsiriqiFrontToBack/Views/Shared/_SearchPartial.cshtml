@model IEnumerable<Product>
@foreach (Product pro in Model)
{
    <div class="p-3 pt-4 d-flex " data-id="@pro.Id">
        <div class="cart-img"><img src="/img/products/@pro.Image" alt=""> </div>
        <div class="pl-4">
            <p class="cart-product-name">
                @pro.Name
            </p>
            <p class="cart-price">
                $@pro.Price
            </p>
        </div>
    </div>
}
