@model Sliders
@{
    ViewData["Title"] = "Create";
}

<!-- Status text + button -->
<div class="card">
    <div class="card-header header-elements-inline">
        <h6 class="card-title">Update Slider Item</h6>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
            </div>
        </div>
    </div>

    <div class="card-body">
            <img src="~/img/slider images/@Model.Image" width="400" class="mx-auto" alt="Alternate Text" />
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row mt-3">
                <label asp-for="Photo" class="col-lg-2 col-form-label font-weight-semibold"></label>
                <div class="col-lg-12">
                    <input asp-for="Photo" accept="image/*" class="file-input-slider-main" data-fouc>
                    <span class="text-warning" asp-validation-for="Photo"></span>
                </div>
            </div>
            <div class="d-flex justify-content-end align-items-center">
                <button type="submit" class="btn bg-blue ml-3 legitRipple">Submit <i class="icon-paperplane ml-2"></i></button>
            </div>
        </form>
    </div>
</div>
@section ThemeScript{
    <script src="~/Admin/global_assets/js/plugins/uploaders/fileinput/plugins/purify.min.js"></script>
    <script src="~/Admin/global_assets/js/plugins/uploaders/fileinput/plugins/sortable.min.js"></script>
    <script src="~/Admin/global_assets/js/plugins/uploaders/fileinput/fileinput.min.js"></script>
}
