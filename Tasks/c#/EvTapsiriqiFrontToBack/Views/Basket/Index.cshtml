@model List<BasketRazorVM>
@{
    ViewData["Title"] = "Index";
}
    <div class="container">
        <div class="row">

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Image</th>
                        <th scope="col">Count</th>
                        <th scope="col">Price</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (BasketRazorVM item in Model)
                    {
                    <tr>
                        <td>@item.Name</td>
                        <td><img src="~/img/products/@item.Image" width="100" height="100" alt="Alternate Text" /></td>
                        <td>@item.Count</td>
                        <td>@item.Price</td>
                        <td ><a style="color:black; display:flex" asp-controller="Basket" asp-route-id="@item.Id" asp-action="DeleteBasketProduct"> <i  class="fal fa-times float-right"></i></a></td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

